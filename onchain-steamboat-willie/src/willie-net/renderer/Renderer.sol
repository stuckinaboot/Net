    {
        // Checks
        _passesUserStateChecks(tokenAddress, tokenId);

        // Update pfp
        userToPFP[msg.sender] = PFP({ tokenAddress: pfpTokenAddress, tokenId: pfpTokenId });

        // Emit pfp updated event
        emit PfpUpdated(msg.sender, tokenAddress, tokenId);
